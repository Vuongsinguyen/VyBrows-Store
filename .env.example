# Local VyBrows-Store Configuration
# This store runs with local data implementation, no Shopify integration required

COMPANY_NAME="VyBrows Store"
SITE_NAME="VyBrows Store"

# ===========================================
# PAYPAL CHECKOUT CONFIGURATION
# ===========================================

# PayPal Client ID (public - can be exposed to client-side)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# PayPal Client Secret (private - server-side only)
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PayPal Environment (sandbox for testing, production for live)
PAYPAL_ENVIRONMENT=sandbox

# Your site URL (used for PayPal return/cancel URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# GOOGLE SHEETS CONFIGURATION
# ===========================================

# Google Sheets Service Account Email
GOOGLE_SHEETS_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com

# Google Sheets Private Key (single line with \n for line breaks)
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Sheets Spreadsheet ID
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable detailed logging in development
NODE_ENV=development

# Shopify variables below are NOT used in local implementation
# Uncomment and configure only if switching back to Shopify integration
# SHOPIFY_REVALIDATION_SECRET=""
# SHOPIFY_STOREFRONT_ACCESS_TOKEN=""
# SHOPIFY_STORE_DOMAIN="[your-shopify-store-subdomain].myshopify.com"
